# Note Ninjas Backend Environment Configuration

# Document paths (relative to backend directory)
NOTE_NINJAS_PATH=../NoteNinjas
TITLED_CPG_PATH=../Titled_CPGs
UNTITLED_CPG_PATH=../Untitled_CPGs
VECTOR_STORE_PATH=./vector_store

# API settings
ALLOWED_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]

# RAG settings
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
TOP_K_RETRIEVAL=50
TOP_N_RERANK=12
SIMILARITY_THRESHOLD=0.7

# Model settings
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
RERANK_MODEL=cross-encoder/ms-marco-MiniLM-L-6-v2

# Feedback settings
FEEDBACK_STORAGE_TYPE=memory

# Logging
LOG_LEVEL=INFO

# Optional: Database settings (for production)
# DATABASE_URL=postgresql://user:password@localhost/note_ninjas
# REDIS_URL=redis://localhost:6379
