# Note Ninjas Backend Environment Configuration

# OpenAI API Configuration (for embeddings)
OPENAI_API_KEY=your-openai-api-key-here
USE_OPENAI_EMBEDDINGS=true
OPENAI_EMBEDDING_MODEL=text-embedding-3-small

# Document Paths
NOTE_NINJAS_PATH=../NoteNinjas
TITLED_CPG_PATH=../Titled_CPGs
UNTITLED_CPG_PATH=../Untitled_CPGs
VECTOR_STORE_PATH=./vector_store

# API Settings
ALLOWED_ORIGINS=["http://localhost:3000","http://127.0.0.1:3000"]

# RAG Settings
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
TOP_K_RETRIEVAL=50
TOP_N_RERANK=12
SIMILARITY_THRESHOLD=0.7

# Model Settings (fallback when OpenAI is not available)
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
RERANK_MODEL=cross-encoder/ms-marco-MiniLM-L-6-v2

# Feedback Settings
FEEDBACK_STORAGE_TYPE=memory

# Logging
LOG_LEVEL=INFO